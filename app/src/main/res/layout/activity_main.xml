<?xml version="1.0" encoding="utf-8"?>
<com.ych.hiui.tab.bottom.HiTabBottomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ych.common.tab.HiFragmentTabView
        android:id="@+id/fragmnent_tab_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btnHiLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HiLog"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHiTabBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HiTabBottom"
        app:layout_constraintTop_toBottomOf="@+id/btnHiLog" />

    <Button
        android:id="@+id/btnDataBind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DataBingActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnHiTabBottom" />
</com.ych.hiui.tab.bottom.HiTabBottomLayout>
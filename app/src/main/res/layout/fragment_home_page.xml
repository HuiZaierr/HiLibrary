<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/homeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"
        android:text="HomePage"/>


    <Button
        android:id="@+id/btnHiLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HiLog"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDataBind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DataBingActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnHiLog" />

    <Button
        android:id="@+id/btnTabTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HiTabTopDemoActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnDataBind" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HiRefreshDemoActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnTabTop" />

    <Button
        android:id="@+id/btnNaviigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HiNavigationDemoActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnRefresh" />

    <Button
        android:id="@+id/btnArouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HiARouterDemoActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnNaviigation" />


    <Button
        android:id="@+id/btnArouterDegrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ARoute降级操作"
        app:layout_constraintTop_toBottomOf="@+id/btnArouter" />
</androidx.constraintlayout.widget.ConstraintLayout>